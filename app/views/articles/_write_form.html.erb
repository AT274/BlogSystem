<div class="write-form mx-auto">
    <p><%= I18n.t "title" %></p>
    <%= form.text_field :title, class: "form-control" %>
</div>
<div class="write-form mx-auto">
    <p><%= I18n.t "content" %></p>
    <%= form.text_area :content, class: "form-control", rows: 10 %>
</div>
<div class="write-form mx-auto">
    <p><%= I18n.t "image" %></p>
    <%= form.file_field :image, class: "form-control" %>
</div>
<div class="mx-auto">
    <p><%= I18n.t "status" %></p>
    <p><span><%= form.radio_button :status, "open" %>&nbsp; <%= I18n.t "open" %></span></p>
    <p><%= form.radio_button :status, "not_open" %> &nbsp; <%= I18n.t "not_open" %></p>
</div>