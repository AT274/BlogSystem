<% @user.errors.full_messages.each do |message| %>
<div class="alert alert-danger mx-auto" role="alert">
  <span class="alert"><%= message %></span>
</div>
<% end %>

<div class="heading">
  <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-group") do |f| %>
<div class="field mx-auto">
  <p><%= I18n.t "username" %></p>
  <%= f.text_field :username, autofocus: true, class: "form-control" %>
</div>

<div class="field mx-auto">
  <p><%= I18n.t "email" %></p>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
</div>

<div class="field mx-auto">
  <p><%= I18n.t "password" %></p>
  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
</div>

<div class="field mx-auto">
  <p><%= I18n.t "password_confirmation" %></p>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
</div>

<div class="submit actions mx-auto">
  <%= f.submit (I18n.t "signup"), class: "form-control" %>
</div>
<% end %>