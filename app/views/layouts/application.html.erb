<!DOCTYPE html>
<html>

<head>
  <title>BlogSystem</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body>
  <header>
    <h1 id="logo">BlogSystem</h1>
    <ul class="header-menus">
      <% if @current_user %>
      <li>
        <%= link_to("Logout", logout_path, {method: :post}) %>
      </li>
      <li>
        <%= link_to("Write", new_article_path) %>
      </li>
      <li>
        <%= link_to(@current_user.username, user_page_path(@current_user.username)) %>
      </li>
      <% else %>
      <li>
        <%= link_to("Login", login_form_path) %>
      </li>
      <li>
        <%=  link_to("Signup", signup_path) %>
      </li>
      <% end %>
    </ul>
  </header>
  <% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:error] %>
  </div>
  <% end %>

  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  <% end %>
  <%= yield %>
</body>

</html>