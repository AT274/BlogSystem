<h1>Signup</h1>
<% @user.errors.full_messages.each do |message| %> <div class="form-error">
<div class="alert alert-danger" role="alert">
  <%= message %>
</div>
<% end %>

<%= form_with model: @user, url: users_path, local: true, method: :post do |form| %>
<p>ユーザー名</p>
<%= form.text_field :username %>
<p>メールアドレス</p>
<%= form.email_field :email %>
<p>パスワード(10文字以上)</p>
<%= form.password_field :password %>
<p>パスワード（確認）</p>
<%= form.password_field :password_confirmation %>
<%= form.submit %>
<% end %>